package com.douineau.testspringboot.controller.api;

import java.util.List;
import java.util.Set;

import javax.servlet.http.HttpServletRequest;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;

public interface IGenericApiController<T> {
	
	@GetMapping("/{id}")
	public T getObject(@PathVariable("id") Integer id, HttpServletRequest request);
	
	@GetMapping
	public List<T> getAllObjects(HttpServletRequest request);
	
//	@PostMapping
	public String addObject(@RequestBody T object, HttpServletRequest request);
	
	@PostMapping
	public String addObjects(@RequestBody Set<T> objects, HttpServletRequest request);

}
