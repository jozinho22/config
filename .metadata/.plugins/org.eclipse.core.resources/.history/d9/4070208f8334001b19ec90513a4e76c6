		Annotation[] annot  = thisClass.getAnnotations();
		System.out.println("annot : " + annot);
		
		Annotation[] annot2  = thisClass.getDeclaredAnnotations();
		System.out.println("annot2 : " + annot2);
		
		AnnotatedType superClass = thisClass.getAnnotatedSuperclass();
		System.out.println("superClass : " + superClass);
//		Class<T> clazz = (Class<T>) this.;
