package com.douineau.testspringboot.service;

import java.util.List;

public interface IGenericService<T> {
	
	default public T getObject(Integer id) {
		Optional<T> tMayBe = repo.findById(id);
		if(tMayBe.isPresent()) {
			return tMayBe.get();
		} else {
			return null;
		}
	}
	
	public List<T> getAllObjects();
	
