package com.douineau.testspringboot.controller.security;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.security.crypto.password.PasswordEncoder;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.douineau.testspringboot.controller.api.GenericApiController;
import com.douineau.testspringboot.model.security.User;

@RestController
@RequestMapping("admin/users")
public class UserController extends GenericApiController<User> {

	@Autowired
	private PasswordEncoder passwordEncoder;
	
	@Override
	public String addObjects(List<User> objects) {
		
		for(User user : objects) {
			user.setPassword(passwordEncoder.encode(user.getPassword()));
		}
		service.addObjects(objects);
		
		return "User insérés avec encoding du password :";
	}

}
