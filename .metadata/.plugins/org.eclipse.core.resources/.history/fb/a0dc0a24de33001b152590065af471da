package com.douineau.testspringboot.service.test;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.douineau.testspringboot.dao.test.GenericApiDao;

@Service
public class RepositoryProvider {

  private static List<GenericApiDao<?>> repositories = Lists.newArrayList(GenericApiDao<T>());

  @Autowired
  public RepositoryProvider(List<GenericApiDao<?>> repositories) {
    RepositoryProvider.repositories = repositories;
  }

  public static Optional<GenericApiDao<?>> getRepositoryForType(Class<?> clazz) {
    return repositories.stream().filter(r ->r.getClassType().equals(clazz)).findFirst();
  }
}