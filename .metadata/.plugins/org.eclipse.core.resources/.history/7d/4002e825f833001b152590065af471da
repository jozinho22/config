package com.douineau.testspringboot.service.api;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.douineau.testspringboot.dao.IGenericApiDao;
import com.douineau.testspringboot.model.api.Writer;

@Service
public class WriterService extends GenericApiService<Writer> {

	@Autowired
	private IGenericApiDao<T> repo;
	
	@Override
	public T getObject(Integer id) {
		Optional<T> tMayBe = repo.findById(id);
		if(tMayBe.isPresent()) {
			return tMayBe.get();
		} else {
			return null;
		}
	}

	@Override
	public List<T> getAllObjects() {
		return (List<T>) repo.findAll();
	}

	@Override
	public String addObjects(List<T> objects) {
		repo.saveAll(objects);
		return "Objets de type : " + objects.getClass().getTypeName() + " bien insérés";
	}
}
