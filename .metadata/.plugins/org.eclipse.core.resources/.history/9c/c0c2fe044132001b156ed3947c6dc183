package com.douineau.testspringboot.service.security;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.douineau.testspringboot.dao.security.ApplicationUserDetailsDao;
import com.douineau.testspringboot.model.security.User;
import com.douineau.testspringboot.security.ApplicationUserDetails;
import com.douineau.testspringboot.service.GenericService;

@Service
public class ApplicationUserDetailsService implements GenericService<ApplicationUserDetails> {
	
	@Autowired
	private ApplicationUserDetailsDao repo;

	@Override
	public List<User> getAllObjects() {
		return (List<User>) repo.findAll();
	}

	@Override
	public void addObjects(List<User> objects) {
		repo.saveAll(objects);
	}


}
