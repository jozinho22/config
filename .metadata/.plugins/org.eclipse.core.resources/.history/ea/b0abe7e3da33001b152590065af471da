package com.douineau.testspringboot.dao;

import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Qualifier;
import org.springframework.stereotype.Repository;

import com.douineau.testspringboot.service.RepositoryProvider;

@Repository
@Qualifier("writerDao")
public interface WriterDaoTest extends GenericApiDao<WriterDaoTest> {
	
	default Class<?> getClassType() {
		return WriterDaoTest.class;
	}

	//TODO @Query etc
	
	@Override
	default GenericApiDao<WriterDaoTest> getObjectByProperty(String property) {
		return (Optional<WriterDaoTest>) RepositoryProvider.getRepositoryForType(getClassType());
		
	}

}
