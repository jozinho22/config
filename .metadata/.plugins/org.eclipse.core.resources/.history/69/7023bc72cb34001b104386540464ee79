package com.douineau.testspringboot.controller.api;

import java.util.List;
import java.util.Map;
import java.util.Set;

import javax.servlet.http.HttpServletRequest;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Qualifier;

import com.douineau.testspringboot.model.api.Book;
import com.douineau.testspringboot.service.api.IGenericApiService;

public class GenericApiController<T> implements IGenericApiController<T> {

	@Autowired
	@Qualifier("api")
	protected IGenericApiService<T> service;
	
	@Autowired
	private Map<String, Class<?>> apiMapping;

	@Override
	public T getObject(Integer id, HttpServletRequest request) {
		Class<?> clazz = getClassNameWithRequest(request);
		return service.getObject(clazz, id);
	}

	private Class<?> getClassNameWithRequest(HttpServletRequest request) {
		int thirdSlashPlace = request.getRequestURI().lastIndexOf("/");
		String key = request.getRequestURI().substring(0, thirdSlashPlace);
		Class<?> clazz = apiMapping.get(key);
		System.out.println(request.getRequestURI());
		return clazz;
	}

	@Override
	public List<T> getAllObjects() {
		return service.getAllObjects();
	}

	@Override
	public String addObjects(Set<T> objects) {
		return service.addObjects(objects);		
	}

	@Override
	public String addObject(T object) {
		return service.addObject(object);
	}
	
}
