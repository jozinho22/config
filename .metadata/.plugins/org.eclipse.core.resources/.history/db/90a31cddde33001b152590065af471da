package com.douineau.testspringboot.dao.test;

import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Qualifier;
import org.springframework.stereotype.Repository;

import com.douineau.testspringboot.service.test.RepositoryProvider;

@Repository
@Qualifier("writerDao")
public class WriterDaoTest extends GenericApiDao<WriterDaoTest> {
	
	default Class<?> getClassType() {
		return WriterDaoTest.class;
	}

	//TODO @Query etc
	
	@Override
	default
	 Optional<GenericApiDao<?>> getObjectByProperty(String property) {
		return RepositoryProvider.getRepositoryForType(getClassType());
	}

}
